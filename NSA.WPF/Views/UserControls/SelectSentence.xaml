<UserControl x:Class="NSA.WPF.Views.UserControls.SelectSentence"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UniformGrid Columns="2">
        <DockPanel LastChildFill="True">
            <Label Margin="0 0 7 0" Width="64">Chapter:</Label>
            <ComboBox SelectedItem="{Binding SelectedChapter}" ItemsSource="{Binding Chapters}" Margin="0 0 7 0" MinWidth="64" IsEditable="True" />
        </DockPanel>
        <DockPanel LastChildFill="True">
            <Label Margin="0 0 7 0" Width="64">Sentence:</Label>
            <ComboBox DisplayMemberPath="Sentence" SelectedItem="{Binding SelectedSentence}" ItemsSource="{Binding Sentences}" MinWidth="64" IsEditable="True" />
        </DockPanel>
    </UniformGrid>
</UserControl>
