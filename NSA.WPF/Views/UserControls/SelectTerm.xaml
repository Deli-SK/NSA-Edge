<UserControl x:Class="NSA.WPF.Views.UserControls.SelectTerm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel>
        <Label Margin="0 0 7 0" Width="64">Term:</Label>
        <ComboBox DisplayMemberPath="Label" MinWidth="256" IsEditable="True" SelectedItem="{Binding SelectedTerm, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Terms}"/>
    </DockPanel>
</UserControl>
