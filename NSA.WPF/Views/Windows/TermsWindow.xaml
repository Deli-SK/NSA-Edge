<Window x:Class="NSA.WPF.Views.Windows.TermsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Terms" SizeToContent="WidthAndHeight" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Command="{Binding Clear}" IsCancel="True" Margin="7" Width="64" Content="OK" Click="OkButton_OnClick"/>
        </StackPanel>
        <DockPanel LastChildFill="True" Background="White">
            <Button Command="{Binding AddTerm}" Click="AddButton_OnClick" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="7" Width="96" IsDefault="True">Add</Button>
            <Label VerticalAlignment="Center">Term:</Label>
            <TextBox Text="{Binding TermToAdd, UpdateSourceTrigger=PropertyChanged}" x:Name="TermTextBox" VerticalAlignment="Center" Margin="7 7 0 7" Width="Auto" MinWidth="128" />
        </DockPanel>
    </DockPanel>
</Window>
